    ;;\ pour l'espace
    :custom
    ;;personnalition des touches, important
    (avy-keys '(?a ?u ?e ?i ?t ?s ?r ?n ?\ ))
    (avy-background t)
    ;;nouvelle touches pour escape avy go timer
    (avy-escape-chars '(?\e ?\M-g))
    :config
    (setq avy-timeout-seconds 0.15)

    ;;personnaliser chaque commande :
